<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_vertical|center_horizontal"
    android:layout_margin="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/member_detail_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTeamLeaderRow"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_profile_details"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_placeholder" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="@color/colorMainFont">

            <TextView
                android:id="@+id/tv_team_member_name_details"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom|center_horizontal"
                android:text="Olly Berry"
                android:textColor="@color/colorMainFont"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_team_member_role_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="top|center_horizontal"
                android:text="iOS Team Lead"
                android:textColor="@color/colorMainFont"
                android:textSize="17sp"
                android:textStyle="italic" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_cpt_armband_details"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:src="@drawable/cpt_armband"
            />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/member_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTeamLeaderRow"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_team_member_description_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="description in here"
            android:textColor="@color/colorMainFont"
            android:textSize="22sp"
            android:textStyle="italic"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTeamLeaderRow"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/img_profile_details_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_placeholder"/>
    </LinearLayout>

</LinearLayout>